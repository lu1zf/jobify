    <body id="page-category">
        <div id="edit-job">
            <h2>
                Editar vaga
            </h2>
        </div>

    <div class="buttons-container">
    <a href="/admin/vagas/">Vagas</a>

    </div>

    <div>
        <form method="POST" id="form-job">
            <label>Title:</label>
            <input type="text" name="titulo" value="<%= vaga.titulo %>">
            <br>
            <label>Description:</label>
            <textarea name="descricao"><%= vaga.descricao %> </textarea>
            <br>
            <label>Cagetogy:</label>
            <select name="categoria">
                <% categorias.forEach( categoria => { %> 
                <option value="<%= categoria.id %>" <% if(categoria.id == vaga.categoria){%> selected <% } %> > <%= categoria.categoria %> </option>
                <% })%> 
            </select>
            <br>
            <button>Save</button>
        </form>
    </div>